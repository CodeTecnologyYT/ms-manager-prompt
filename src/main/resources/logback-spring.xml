<configuration>
    <!-- Appender para enviar logs a Google Cloud Logging -->
    <appender name="CLOUD" class="com.google.cloud.logging.logback.LoggingAppender">
        <!-- Nivel mínimo que se enviará -->
        <log>INFO</log>
        <!-- Los logs de nivel ERROR se enviarán de inmediato -->
        <flushLevel>ERROR</flushLevel>
        <!-- Puedes definir etiquetas opcionales -->
        <enhancers>
            <enhancer>com.google.cloud.logging.logback.resource.GceInstanceResourceEnhancer</enhancer>
        </enhancers>
    </appender>

    <!-- Appender local (para consola) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configura la raíz: manda a Cloud + consola -->
    <root level="INFO">
        <appender-ref ref="CLOUD" />
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>